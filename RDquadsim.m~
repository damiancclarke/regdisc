clear
clf
%********************************************************************************
%*** (1) paramaters
%********************************************************************************
sims = 100;
N = 100000;
beta = [10 5 2 30 3];


%********************************************************************************
%*** (2) Simulate
%********************************************************************************
X     =  100*rand(N,sims);
left  =  X<=50;
right =  abs(1-left);
vict  =  X>50;




running_var = linspace(0,100,N)';
